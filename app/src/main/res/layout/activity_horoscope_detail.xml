<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.detail.HoroscopeDetailActivity">

    <ImageView
        android:id="@+id/ivDetail"
        android:contentDescription=""
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <ImageView
        android:id="@+id/ivBack"
        android:contentDescription="@string/button_come_back"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_back"
        app:tint="@color/gold"
        android:padding="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitleDetail"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDetail"
        tools:text="Jamma Jack" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="0dp"
        android:layout_margin="24dp"
        android:gravity="center"
        android:layout_height="0dp"
        style="@style/Body"
        tools:text="dsds sdfsfsf sdfsfsdf sdfsdfsdf sdfsdfsd sdfsdfsdf sdfsdfsdf swefwefwef wefwef wefr wer wer wer werwer we wer we w "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDetail" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDetail"/>

</androidx.constraintlayout.widget.ConstraintLayout>